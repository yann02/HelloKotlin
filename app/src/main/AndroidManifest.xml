<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hellokotlin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.AnimationActivity"></activity>
        <activity android:name=".ui.ShowWaveViewWithImgActivity" />
        <activity
            android:name=".menu.pop.PopMenusActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".listview.IndividualViewActivity"
            android:theme="@style/NextAppTheme" />
        <activity android:name=".listview.ListViewOnContextualMenusActivity" />
        <activity android:name=".listview.RecycleviewActivity" />
        <activity android:name=".listview.ListViewActivity" />
        <activity android:name=".NextActivity">
            <intent-filter>
                <action android:name="123" />

                <data android:mimeType="text/plain" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>