<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NextAppTheme" parent="Theme.AppCompat.DayNight" />

    <declare-styleable name="WaveViewWithImg">
        <!--声明我们的属性，名称为default_size,取值类型为尺寸类型（dp,px等）-->
        <attr name="src" format="reference" />
        <attr name="color" format="color" />
    </declare-styleable>
    <declare-styleable name="WaveView">
        <!--声明我们的属性，名称为default_size,取值类型为尺寸类型（dp,px等）-->
        <attr name="srcWaveView" format="reference" />
        <attr name="colorWaveView" format="color" />
    </declare-styleable>
</resources>
